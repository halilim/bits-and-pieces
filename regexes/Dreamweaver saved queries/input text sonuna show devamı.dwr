<?xml version="1.0"?>
<dwquery>
  <queryparams matchcase="false" ignorewhitespace="false" useregexp="true" wholeword="false" />
  <find searchmode="document">
    <qtag qname="input" qconvertednls="true"><qattribute qname="type" qcompare="=" qvalue="text"></qattribute><qattribute qname="name" qcompare="=" qvalue="([^&quot;]*)"></qattribute></qtag>
  </find>
  <replace action="addAfterEnd" param1="{else}{$smarty.post.$1}{/if}" param2="{$smarty.post.$1}"/>
</dwquery>
